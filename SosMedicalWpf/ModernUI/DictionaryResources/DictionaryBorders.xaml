<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <!--Border base style-->
    <Style TargetType="Border">
        <Setter Property="Width" Value="700"/>
        <Setter Property="Height" Value="35"/>
        <Setter Property="CornerRadius" Value="20"/>
    </Style>

    <!--Border Base exteded Style-->
    <Style TargetType="Border" BasedOn="{StaticResource {x:Type Border}}" x:Key="redBorder">
        <Setter Property="Background" Value="#FC6586"/>
        <Setter Property="Margin" Value="0 15 0 0"/>
    </Style>
    <Style TargetType="Border" BasedOn="{StaticResource {x:Type Border}}" x:Key="darkBlueBorder">
        <Setter Property="Background" Value="#383660"/>
        <Setter Property="Margin" Value="75 15 0 0"/>
    </Style>
    <Style TargetType="Border" BasedOn="{StaticResource {x:Type Border}}" x:Key="greenBorder">
        <Setter Property="Background" Value="#3DDDC2"/>
        <Setter Property="Margin" Value="150 0 0 0"/>
    </Style>
</ResourceDictionary>